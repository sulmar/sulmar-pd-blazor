@inject AppState AppState

<CascadingValue Value="@message" Name="a" >
    <CascadingValue Value="@description" Name="b">
        <CascadingValue Value="@AppState.Count" Name="count">
            @ChildContent
        </CascadingValue>
    </CascadingValue>
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

 
    private string message = "Hello World!";

    private string description = "Lorem ipsum";
}